{
	"name": "torre76/php-crypto-params",
	"description": "Utility function to encrypt - decrypt string using AES symmetric algorithm that is compatible with https://code.google.com/p/crypto-js/",
    "keywords": [
    	"encrypt",
    	"decrypt",
    	"AES",
    	"parameters",
    	"query string"
    ],
    "homepage": "https://github.com/torre76/php-crypto-params",
    "license":[
    	"LGPL-3.0+"
    ],
    "authors": [
        {
            "name": "Gian Luca Dalla Torre",
            "email": "gianluca@gestionaleauto.com",
            "homepage": "http://www.gestionaleauto.com",
            "role": "CTO"
        }
    ],    
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
	    "satooshi/php-coveralls": "~1.0",
        "phpdocumentor/phpdocumentor": "2.*"
    },
    "require": {
    	"php": ">= 5.3.0",
    	"ext-mcrypt": "*"
    },
    "autoload": {
        "psr-4": {
            "CryptoParams\\":"src/"
        }
    },
    "archive": {
        "exclude": [
            "/test", 
            "/build", 
            "/vendor",
            "/.travis.yml",
            "/**/*.md",
            "/*.xml",
            "/**/.DS_Store",
            "/.gitignore",
            "/*.md",
            "/.DS_Store"
        ]
    }    
}
